<?xml version="1.0" encoding="UTF-8"?>
<config>
  <httpbasic><allow>true</allow></httpbasic>   
  <mode>new</mode>

  <cluster>
   <enabled>true</enabled>
   <datasource>java:/TabulaDS</datasource>
  </cluster>

  <shire>
    <filteruserkey>SSO_USER</filteruserkey>
    <uri-header>x-requested-uri</uri-header>
    <location>https://blossom.warwick.ac.uk/sso/acs</location>
    <sscookie>
      <name>SSO-SSC-Courses</name>
      <path>/</path>
      <domain>blossom.warwick.ac.uk</domain>
    </sscookie>
    <providerid>urn:blossom.warwick.ac.uk:courses:service</providerid>
  </shire>

  <credentials>
    <certificate>file:/etc/apache2/ssl/blossom.warwick.ac.uk.crt</certificate>
    <key>file:/etc/apache2/ssl/blossom.warwick.ac.uk.key</key>
    <chain>file:/etc/apache2/ssl/empty.crt</chain>
  </credentials>

</config>
