
BASEDIR=`dirname "$0"`

cd $BASEDIR/../../

addcp() {
  CP="$CP:$1"
}

CP=""
for jar in `find lib/runtime -name "*.jar"`; do
  CP="$CP:$jar"
done

addcp src/main/webapp
addcp src/main/webapp/WEB-INF
addcp lib/build/servlet-api.jar
addcp lib/build/jsp-api.jar
addcp lib/build/log4j/log4j-1.2.16.jar
addcp lib/build/ojdbc6.jar
addcp lib/build/jtds-1.3.1.jar
addcp src/console/scala
addcp src/console/resources
addcp src/main/resources
addcp target/courses.war/WEB-INF/classes

#ant compile
scala -cp $CP -i $BASEDIR/console.scala
