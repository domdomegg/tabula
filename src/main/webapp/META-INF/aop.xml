<!DOCTYPE aspectj PUBLIC    
  "-//AspectJ//DTD//EN"    "http://www.eclipse.org/aspectj/dtd/aspectj.dtd">  

<!-- 

This aop.xml file is mainly for the benefit of running tests in Eclipse using load-time
weaving. The actual application uses compile-time weaving which doesn't depend on aop.xml.

-->
<aspectj>
	<weaver options="-showWeaveInfo -Xreweavable -Xset:weaveJavaxPackages=false
		-XmessageHandlerClass:org.springframework.aop.aspectj.AspectJWeaverMessageHandler">
		<include within="uk.ac.warwick..*"/>
	</weaver>
	<aspects>
		<aspect name="org.springframework.beans.factory.aspectj.AnnotationBeanConfigurerAspect"/>
	</aspects>
</aspectj>
