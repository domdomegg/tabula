<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">

	<context:component-scan base-package="uk.ac.warwick.tabula.scheduling.web.controllers" />
	<context:component-scan base-package="uk.ac.warwick.tabula.scheduling.services" />

	<!-- We need to get jobs from other components. -->
	<context:component-scan base-package="uk.ac.warwick.tabula.coursework.services" />
	<context:component-scan base-package="uk.ac.warwick.tabula.coursework.jobs" />

	<context:component-scan base-package="uk.ac.warwick.tabula.profiles.services" />

	<bean class="uk.ac.warwick.tabula.scheduling.IndexManagerMessageListener" />

	<beans profile="dev">
		<context:component-scan base-package="uk.ac.warwick.tabula.dev.web.controllers" />
	</beans>

</beans>
